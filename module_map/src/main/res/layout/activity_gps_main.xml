<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvlatitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvlongitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvhigh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvdirection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvspeed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvgpstime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tvinfotype"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <Button
            android:id="@+id/btnmanual"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnmanual" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsettimespace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btnsettimespace" />

            <EditText
                android:id="@+id/ettimespace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/ettimespacehint"
                android:maxLength="5"
                android:numeric="integer" />
        </LinearLayout>

        <Button
            android:id="@+id/btnexit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnexit" />
    </LinearLayout>
</ScrollView>
