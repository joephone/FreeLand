<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="@dimen/dp_5"
        android:background="@drawable/shape_white_top_radius_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_white_top_radius_5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="温馨提示"
                android:textColor="@color/text_66"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacyClauseContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="@string/privacy_policy_content"
                android:textColor="@color/text_66"
                android:textSize="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_circle_point_text_66"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:lineSpacingExtra="8dp"
                    android:text="设备信息（提供账号安全，服务推送功能）"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_circle_point_text_66"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:lineSpacingExtra="8dp"
                    android:text="存储权限（提供修改个人信息、车主认证、发布文章视频功能）"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_circle_point_text_66"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:lineSpacingExtra="8dp"
                    android:text="相机权限（提供修改个人信息、添加车辆、发布文章视频功能）"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_circle_point_text_66"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:lineSpacingExtra="8dp"
                    android:text="地理位置（提供养车、救援等服务以及常用地址管理）"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/shape_circle_point_text_66"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:lineSpacingExtra="8dp"
                    android:text="录音权限（提供发布视频、个人认证功能）"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#d7d7dc"
        android:paddingTop="@dimen/dp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/privacyClauseDisagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_white_left_bottom_radius_5dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="不同意"
            android:textColor="@color/colorGitHubGreen"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/privacyClauseAgree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_red_right_bottom_radius_5dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="16dp" />


    </LinearLayout>


</LinearLayout>