<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title" />

    <TextView
        android:id="@+id/tv_checkCallPermission"
        style="@style/standardGreenButton"
        android:layout_centerInParent="true"
        android:text="申请打电话权限"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_checkStorePermission"
        style="@style/standardGreenButton"
        android:layout_marginTop="@dimen/standard_padding"
        android:layout_below="@id/tv_checkCallPermission"
        android:layout_centerInParent="true"
        android:text="申请存储权限"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_checkInstallPermission"
        style="@style/standardGreenButton"
        android:layout_marginTop="@dimen/standard_padding"
        android:layout_below="@id/tv_checkStorePermission"
        android:layout_centerInParent="true"
        android:text="申请安装权限"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_checkLocationPermission"
        style="@style/standardGreenButton"
        android:layout_marginTop="@dimen/standard_padding"
        android:layout_below="@id/tv_checkInstallPermission"
        android:layout_centerInParent="true"
        android:text="申请定位权限"
        android:textColor="@color/white"
        />
</RelativeLayout>
