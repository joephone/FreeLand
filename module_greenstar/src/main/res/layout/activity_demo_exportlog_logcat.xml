<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_show_run_log"
            style="@style/standardGreenButton"
            android:layout_margin="20dp"
            android:text="Show Run Log" />

        <ToggleButton
            android:id="@+id/tbtn_logcat_toggle"
            style="@style/standardGreenButton"
            android:layout_margin="20dp"
            android:textOn="@string/enable_logcat"
            android:textOff="@string/disable_logcat"/>

        <ToggleButton
            android:id="@+id/tbtn_log_toggle"
            style="@style/standardGreenButton"
            android:layout_margin="20dp"
            android:textOn="@string/add_log"
            android:textOff="@string/stop_add_log"/>

    </LinearLayout>



</LinearLayout>