<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iai_rela"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/water_effect_selector"
    android:padding="10.0dip">

    <ImageView
        android:id="@+id/iai_igview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_app_green_star" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/iai_igview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iai_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/iai_pack_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_app_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_app_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_in_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_up_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_flags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="fill"
            android:maxLines="1" />
    </LinearLayout>

</RelativeLayout>