<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title" />

    <TextView
        android:id="@+id/tv_checkPermission"
        style="@style/standardGreenButton"
        android:layout_centerInParent="true"
        android:text="点击申请打电话、照相两个权限"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/tv_checkNotification"
        style="@style/standardGreenButton"
        android:layout_below="@id/tv_checkPermission"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="检测通知权限"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_getNotification"
        style="@style/standardGreenButton"
        android:layout_below="@id/tv_checkNotification"
        android:layout_marginTop="@dimen/standard_padding"
        android:visibility="invisible"
        android:text="获取通知权限"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/tv_network"
        style="@style/standardGreenButton"
        android:layout_below="@id/tv_getNotification"
        android:layout_marginTop="@dimen/standard_padding"
        android:text="网络状态"
        android:textColor="@color/white"
        />

</RelativeLayout>
